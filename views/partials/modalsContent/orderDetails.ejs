<div class="order-details">
    <div class="content">
        <div class="row">
            <div class="col-md-4">
                <p>Importe total: $<%= orderDetails.totalSale.toFixed(2) %>
                </p>
            </div>
            <div class="col-sm-6 col-md-4">
                <p>Cantidad de productos: <%= orderDetails.productList.length %>
                </p>
            </div>
            <div class="col-sm-6 col-md-4">
                <p>Fecha de registro: <%= orderDetails.createdAt.toLocaleString() %>
                </p>
            </div>
        </div>
        <div class="row">
            <div class="row">
                <div class="col-6 text-start">
                    <h5>Productos</h5>
                </div>
                <div class="col-6 text-end">
                    <small class="fw-bold text-right">Estatus: <span class="<%= orderDetails.saleStatus.key %>"><i class="bi bi-circle-fill"></i>&nbsp;<%= orderDetails.saleStatus.value %></span></small>
                </div>
            </div>
            <div class="table-content">
                <table class="hover table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Precio</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orderDetails.productList.forEach(p=> { %>
                            <tr>
                                <td><img src="<%= p.imageUrl %>" width="20" height="20" style="border-radius: 50;" />
                                </td>
                                <td>
                                    <%= p.name %>
                                </td>
                                <td>
                                    <%= p.description %>
                                </td>
                                <td>$<%= p.price.toFixed(2) %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <h5>Datos de cliente</h5>
            <div class="col-sm-6 col-md-4">
                <p>Nombre: <%= orderDetails.buyerUser.completeName %>
                </p>
            </div>
            <div class="col-sm-6 col-md-4">
                <p>Correo electrónico: <%= orderDetails.buyerUser.email %>
                </p>
            </div>
            <div class="col-sm-6 col-md-4">
                <p>Matricula: <%= orderDetails.buyerUser.matricula %>
                </p>
            </div>
        </div>
    </div>
</div>


<style>
    .order-details {
        text-align: left;
        padding: 5px;
    }

    .order-details .content .row {
        margin-bottom: 10px;
        align-items: center;
    }

    .order-details .content .row .table-content {
        max-height: 200px;
        overflow: scroll;
    }
</style>