<div class="new-product-form form-modal">
  <form id="newProductForm">
    <div class="row">
      <div class="col md-5">
        <label for="name" class="form-label">Nombre de producto:</label>
        <input type="text" maxlength="100" class="form-control" id="name" placeholder="Nombre de producto" value="<%= product ? product.name : '' %>">
      </div>
      <div class="col md-2">
        <label for="price" class="form-label">Precio:</label>
        <input type="number" class="form-control" id="price" placeholder="Precio" value="<%= product ? product.price : 0 %>">
      </div>
      <div class="col md-5">
        <label for="stock" class="form-label">Cantidad disponible:</label>
        <input type="number" class="form-control" id="stock" placeholder="Cantidad disponible" value="<%= product ? product.stock : 0 %>">
      </div>
    </div>
    <div class="row">
      <div class="col md-9">
        <label for="description" class="form-label">Descripción:</label>
        <textarea type="text" maxlength="200" class="form-control" id="description" placeholder="Descripción"><%= product ? product.description : '' %></textarea>
      </div>
      <div class="col md-3">
        <label for="description" class="form-label">Categoría:</label>
        <select class="form-select" aria-label="Selecciona la categoría" id="category">
          <% categoriesList.forEach(category => { %>
            <% if (category.active) { %>
              <option value="<%= category.id %>" <%= category.id == product.Category ?? '' ? 'selected' : '' %> ><%= category.name %></option>
            <% } %> 
          <% }) %> 
        </select>
      </div>
    </div>
    <div class="row">
      <div class="col md-12">
        <label for="imageUrl" class="form-label">Dirección de imagen para producto:</label>
        <input type="text" class="form-control" id="imageUrl" placeholder="Dirección de imagen" value="<%= product ? product.imageUrl : '' %>">
      </div>
    </div>
  </form>
</div>